<?xml version="1.0" encoding="utf-8"?>
<TableRow xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
    android:longClickable="true">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <!--Layout for the Destination and the Address -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="5"
        android:layout_width="180dp"
        android:layout_height="wrap_content">
        <TextView
        android:id="@+id/desti"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:padding="5dp"
        android:text="@string/destination_header"
        />

        <TextView
            android:id="@+id/address"
            android:textStyle="normal"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="Address"
            android:layout_below="@id/desti"
            android:padding="5dp"
            />


    </LinearLayout>

    <!--Layout for the Two Buttons -->
    <LinearLayout
       android:layout_height="match_parent"
       android:layout_width="wrap_content"
       android:layout_weight="1">


    <ImageButton android:id="@+id/start_button"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_weight="1"
        android:src="@drawable/start_icon"
         android:layout_gravity="center"
         android:padding="3dp"
         android:layout_margin="5dp"
         android:onClick="startClicked"
        android:background="@null"
         />
        <ImageButton android:id="@+id/end_Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"
            android:src="@drawable/end_icon"
        android:layout_gravity="center"
        android:padding="3dp"
        android:layout_margin="5dp"
        android:onClick="endClicked"
            android:background="@null"
        />


    </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"
        android:layout_below="@+id/layout"/>
</LinearLayout>

</TableRow>